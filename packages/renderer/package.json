{
  "name": "@noxion/renderer",
  "version": "0.2.0",
  "description": "React rendering components and theme system for Noxion",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./src/styles/noxion.css"
  },
  "files": [
    "dist",
    "src/styles",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "src/styles/**/*.css"
  ],
  "scripts": {
    "build": "tsc",
    "release": "npm publish",
    "test": "bun test",
    "lint": "echo 'lint ok'",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "notion",
    "blog",
    "react",
    "components",
    "noxion"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jiwonme/noxion.git",
    "directory": "packages/renderer"
  },
  "homepage": "https://github.com/jiwonme/noxion#readme",
  "bugs": {
    "url": "https://github.com/jiwonme/noxion/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "@noxion/notion-renderer": "workspace:*",
    "lucide-react": "^0.469.0",
    "notion-types": "^7.8.2",
    "notion-utils": "^7.8.2"
  },
  "devDependencies": {
    "@types/bun": "^1.2.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "typescript": "^5.7.0"
  }
