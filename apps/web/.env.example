# Required: Your Notion database page ID
NOTION_PAGE_ID=

# Optional: Notion integration token (required for private pages)
NOTION_TOKEN=

# Optional: Notion space ID
NOTION_SPACE_ID=

# Site metadata
SITE_NAME=My Blog
SITE_DOMAIN=example.com
SITE_AUTHOR=Your Name
SITE_DESCRIPTION=A blog powered by Notion and Noxion

# Optional: Secret token for on-demand revalidation
REVALIDATE_SECRET=

# Optional: Notion webhook verification token (for auto-publish via Notion Integration Webhooks)
# NOTION_WEBHOOK_SECRET=

# Optional: Download images at build time instead of proxying via next/image
